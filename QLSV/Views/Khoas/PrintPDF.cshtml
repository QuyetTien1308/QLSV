@model List<QLSV.Models.Khoa>
<style>
    thead {
        background-color: #00FF00;
        color: black
    }

    table {
        width:100%;
        border: 1px solid black;
        font-size:50px;
        margin-left:auto;
        margin-right:auto;
    }

    td, th {
        padding: 5px;
        font-size: 14px;
    }
</style>
<table class="table table-bordered table-striped" border="1" style="border-color:black">
    <thead>
        <tr>
            <th>Mã khoa</th>
            <th>Tên khoa</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.MaKhoa</td>
            <td>@item.TenKhoa</td>
            <td>@item.SDT</td>
            <td>@item.DiaChi</td>
        </tr>

        }
    </tbody>
</table>
